<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:cardCornerRadius="8dp"
    app:cardElevation="20dp"
    android:backgroundTint="@color/card_background1"
    android:layout_margin="6dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <!-- Price Section -->
        <TextView
            android:id="@+id/price_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="₹99/kg"
            android:textColor="#3E236E"
            android:textSize="24sp"
            android:textStyle="bold"
            android:background="@drawable/price_bg"
            android:padding="8dp"
            android:layout_marginBottom="8dp"/>

        <!-- Product Image -->
        <ImageView
            android:id="@+id/product_image"
            android:layout_width="120dp"
            android:layout_height="160dp"
            android:src="@drawable/movie"
            android:scaleType="fitCenter"
            android:layout_marginBottom="8dp"/>

        <!-- Product Info -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:background="@drawable/card_name_description_bg"
            android:padding="10dp">
            <TextView
                android:id="@+id/product_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Milk Joy"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/product_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="White Ghee Tetra Pack 1L"
                android:textColor="@android:color/white"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/mrp_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="MRP ₹600"
                android:textColor="@android:color/white"
                android:textSize="16sp"/>

        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>

